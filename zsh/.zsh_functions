function reload_zsh() {
  echo "Reloading zsh configuration..."
  source $HOME/.zshrc
  echo "Zsh configuration reloaded."
}

function check_git_config() {
  echo "Checking git config... \n"
  echo "Global git config:"
  echo "User Name: $(git config --global user.name)"
  echo "User Email: $(git config --global user.email)"

  echo ""

  inside_git_repository=$(git stsatus 2>/dev/null)
  if [ $? -eq 0 ]; then
    echo "Local git config:"
    echo "User Name: $(git config --local user.name)"
    echo "User Email: $(git config --local user.email)"
  else 
    echo "Not inside a git repository. Skipping local git config check."
  fi
}

function edit_php_ini() {
  php --ini | head -n 1 | awk '{ print $5}' | xargs -I {} $EDITOR '{}/php.ini'
}

function mkcd() {
  # No -p since we have it already in the aliases
  mkdir "$1" 
  cd "$1"
}

function install_laravel() {
  if ! command -v php >/dev/null 2>&1; then
    echo "PHP is not installed. Please install PHP first."
    return 1
  fi

  if ! command -v composer >/dev/null 2>&1; then
    echo "Composer is not installed. Please install Composer first."
    return 1
  fi

  composer global require laravel/installer
}

function install_cobra_cli() {
  if ! command -v go >/dev/null 2>&1; then
    echo "Go is not installed. Please install Go first."
    return 1
  fi

  go install github.com/spf13/cobra-cli@latest
}
