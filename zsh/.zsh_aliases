# general
alias sido='sudo' # yes... don't judge...
alias suido='sudo'

# cd
alias ..='cd ..'
alias ...='cd ../..'

# ls
alias ls='ls -h --color=auto'
alias ll='ls -lh --color=auto'
alias la='ls -lah --color=auto'

# rm
alias rm='rm -i'

# mv
alias mv='mv -i'

# cp
alias cp='cp -i'

# grep
alias grep='grep -i --color=auto'
alias g='grep -i --color=auto'

# mkdir
alias mkdir='mkdir -p'

# watch
alias watch='watch --color'

# tree
alias tree='tree -C -pugsh --du'

# tmux
alias tmux='tmux -u'
alias t='tmux -u'
alias ta='tmux -u a'
alias tls='tmux -u ls'

# tree
alias tree='tree -pugsh --du'
alias wtree='watch --color "tree -pugsh --du"'

# rsync
alias rsync='rsync -azhv --info=progress2 --partial'
alias rsynclist='rsync -azhv --info=progress2 --partial --list-only'
alias rsyncdry='rsync -azhv --info=progress0 --partial --dry-run'
alias rsyncdeletesource='rsync -azhv --info=progress2 --partial --remove-source-files'

# homebrew
alias brewup='brew update && brew upgrade'
alias brewclean='brew cleanup'

# docker 
alias d='docker'
alias dc='docker compose'
alias dcupd='docker compose up -d'
alias dcdown='docker compose down'
alias dclogsf='docker compose logs -f'

# kubernetes
alias k='kubectl'

alias wano='watch "kubectl get nodes"'
alias wanow='watch "kubectl get nodes -o wide"'
alias wapo='watch "kubectl get pods"'
alias wapow='watch "kubectl get pods -o wide"'

# helm
alias h='helm'
alias hls='helm ls'

# nodejs
alias n='node'

# pnpm
alias pnpmdev='pnpm run dev'

# go
alias g='go'

# php
alias p='php'

# laravel
alias l='php artisan'
alias ldev='php artisan serve'

# ssh
alias sshconfigedit='$EDITOR ~/.ssh/config'

# only on linux
if [[ "$(uname)" == "Linux" ]]; then
  alias os='cat /etc/os-release'
fi
